---
import Base from "@layouts/base.astro";
import { Image } from "astro:assets";
import icon from "@assets/icon.webp";
import Timeline from "@components/composite/timeline.astro";
import Badge from "@components/display/badge.astro";
import ResponsiveWidth from "@components/layout/responsive-width.astro";
import MiniCard from "@components/button/mini-card.astro";
import Paper from "@components/display/paper.astro";
import IconLink from "@components/display/icon-link.astro";

const events = [
  { date: "2015-04", title: "香川高等専門学校 機械工学科入学" },
  { date: "2016-04", title: "香川高等専門学校 電気情報工学科転科" },
  { date: "2018-08", title: "jig.jpインターン(4週間)" },
  { date: "2018-12", title: "mixi git challenge 2位" },
  { date: "2019-03", title: "mixi bug shooting challenge" },
  {
    date: "2020-03",
    title: "日本音響学会 春季研究発表会 ポスター発表（開催扱い）",
  },
  { date: "2020-03", title: "香川高等専門学校 電気情報工学科卒業" },
  { date: "2020-04", title: "筑波大学 情報学群 情報科学類入学" },
  { date: "2020-08", title: "株式会社はてな サマーインターン" },
  { date: "2020-09", title: "株式会社ACCESS 2day インターン" },
  { date: "2021-03", title: "クックパッド株式会社 spring internship 最優秀賞" },
  {
    date: "2021-09",
    title: "クックパッド株式会社 就業型インターン(SRE) (現在退職)",
  },
  {
    date: "2021-12",
    title: "Taiwan Now! 蘭の舟ロボット製作（制御、電源回路、通信）",
  },
];

const keywords = [
  "AWS",
  "Terraform",
  "Rust",
  "ECS",
  "GitHub Actions",
  "TypeScript",
  "C",
];
---

<Base title="namachan10777">
  <ResponsiveWidth>
    <section class:list={["main-section", "profile"]}>
      <div class="large-icon-container">
        <div class="icon-wrapper">
          <Image src={icon} alt="icon" />
        </div>
      </div>
      <div class="brief-profile-container">
        <h2 class="name">Masaki Nakano</h2>
        <nav class="icons">
          <IconLink
            name="x-logo"
            color="black"
            href="https://x.com/namachan10777"
          />
          <IconLink
            name="material-symbols:mail-outline-rounded"
            color="var(--color-complementary)"
            href="mailto:admin@namachan10777.dev"
          />
        </nav>
      </div>
    </section>
  </ResponsiveWidth>
  <ResponsiveWidth>
    <section class="badge-container">
      {
        keywords.map((keyword) => (
          <div class="badge-wrapper">
            <Badge>{keyword}</Badge>
          </div>
        ))
      }
    </section>
  </ResponsiveWidth>
  <ResponsiveWidth>
    <section class="main-section">
      <h2 class="section-heading">Timeline</h2>
      <div class="content-wrapper">
        <Timeline events={events} />
      </div>
    </section>
  </ResponsiveWidth>
  <ResponsiveWidth>
    <section class="main-section">
      <h2 class="section-heading">Qualifications</h2>
      <div class="qual-cards-container">
        <div class="qual-card-wrapper">
          <MiniCard title="TOEIC L&R" description="765" />
        </div>
        <div class="qual-card-wrapper">
          <MiniCard title="ネットワークスペシャリスト" description="" />
        </div>
        <div class="qual-card-wrapper">
          <MiniCard title="応用情報技術者" description="" />
        </div>
      </div>
    </section>
  </ResponsiveWidth>
  <ResponsiveWidth>
    <section class="main-section">
      <h2 class="section-heading">Papers</h2>
      <ul>
        <Paper
          title="RustのUCXラッパーasync-ucxの性能評価"
          booktitle="第192回HPC研究会"
        />
        <Paper
          title="ユーザーからの補助情報を用いるインタラクティブ音源分離システム"
          booktitle="日本音響学会 2020年"
          href="https://kitalab.net/pdf/2020_ASJspr_nakano.pdf"
        />
        <Paper
          title="ユーザーからの補助情報を用いる独立低ランク行列分析"
          booktitle="日本音響学会"
          href="https://kitalab.net/pdf/2020_ASJaut_oshima.pdf"
        />
      </ul>
    </section>
  </ResponsiveWidth>
</Base>

<style>
  .icons {
    display: grid;
    grid-template-columns: 1.5rem 1.5rem;
    margin-top: 1rem;
    margin-bottom: 0.5rem;
    gap: 1rem;
  }

  .profile {
    display: grid;
    gap: 1rem;
    grid-template-columns: 6rem 1fr;
  }

  .qual-card-wrapper {
    padding: 0.5rem;
  }

  .qual-cards-container {
    padding-top: 1rem;
    display: flex;
    flex-wrap: wrap;
  }

  .badge-wrapper {
    padding: 0.5rem;
  }

  .badge-container {
    display: flex;
    flex-wrap: wrap;
  }

  .content-wrapper {
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  .section-heading {
    font-weight: bold;
    font-size: var(--font-size-lg);
  }

  .brief-profile-text {
    padding-top: 0.5rem;
    color: var(--color-text-normal);
  }

  .name {
    font-size: var(--font-size-xl);
    font-weight: bold;
  }

  .main-section {
    padding: 1rem;
  }

  .icon-wrapper {
    width: 5rem;
    height: 5rem;
    border-radius: 50%;
    overflow: hidden;
  }

  .icon-wrapper > img {
    width: 100%;
    height: auto;
  }
</style>
