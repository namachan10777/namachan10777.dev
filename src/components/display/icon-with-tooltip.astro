---
import { Icon } from "astro-icon/components";
export type Props = {
  name: string;
  url: string;
  tooltip: string;
};
const { name, url, tooltip } = Astro.props;
---

<a href={url} class="group flex flex-col items-start relative">
  <div class="w-6 h-6 flex items-center justify-center">
    <Icon name={name} class="icon" />
  </div>
  <div class="text-sm absolute w-40 top-8">
    <div class="tooltip">
      {tooltip}
    </div>
  </div>
</a>

<style>
  @tailwind components;

  @layer components {
    .icon {
      @apply text-2xl text-gray-700 transition-transform;
      @apply group-hover:scale-110;
    }

    .tooltip {
      @apply p-1 rounded-sm w-fit transition-colors bg-transparent text-transparent;
      @apply group-hover:bg-gray-900 group-hover:text-white;
    }
  }
</style>
