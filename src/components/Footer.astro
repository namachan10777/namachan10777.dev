---
import ContentPlacement from './ContentPlacement.astro';

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <ContentPlacement>
    <div class="container">
      <div class="copyright">
        &copy; {currentYear} namachan10777
      </div>
    </div>
  </ContentPlacement>
</footer>

<style>
  .site-footer {
    padding-block: var(--space-xl);
    padding-inline: 0;
    border-block-start: var(--border-width-thin) solid rgb(var(--gray-light), var(--opacity-medium));
    color: rgb(var(--gray));
    font-size: var(--font-size-xs);
  }

  .container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .links {
    display: flex;
    gap: var(--space-lg);
  }

  .links a {
    color: var(--link-color);
    text-decoration: none;
  }

  .links a:hover {
    color: var(--link-hover-color);
    text-decoration: underline;
  }

  @media (max-width: var(--breakpoint-mobile)) {
    .container {
      flex-direction: column;
      align-items: center;
      gap: var(--space-md);
      text-align: center;
    }

    .links {
      gap: var(--space-md);
    }
  }
</style>
