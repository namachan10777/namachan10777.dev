---
import HeadingInner from "./heading-inner.astro";

interface Props {
  id?: string;
}
---

<h6 id={Astro.props.id}>
  <HeadingInner id={Astro.props.id}><slot /></HeadingInner>
</h6>

<style>
  @layer component {
    h6 {
      margin-block: 0.5rem;
      font-size: var(--font-size-lg);
      line-height: 1.25rem;
      font-weight: bold;
      color: var(--fg-strong);
    }
    h6::before {
      content: "#";
      font-size: var(--font-size-base);
      color: var(--fg-weak);
    }
  }
</style>
