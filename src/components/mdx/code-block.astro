---
import { Code } from "astro:components";
import type { BundledLanguage } from "shiki";

export interface Props {
  code: string;
  lang: BundledLanguage;
}

const { lang, code } = Astro.props;
---

<Code
  lang={lang}
  code={code}
  class="max-w-[calc(100vw-1.5rem)] overflow-x-scroll"
  theme={"github-light"}
/>
