---
import ContentPlacement from './ContentPlacement.astro';
import { Icon } from 'astro-icon/components';
---

<header class="site-header">
  <ContentPlacement>
    <div class="container">
      <div class="logo">
        <a href="/">namachan10777.dev</a>
      </div>
      <nav>
        <ul>
          <li>
            <a aria-label="link to home" href="/"><Icon class="link-icon" name="iconoir:home" /></a>
          </li>
          <li>
            <a aria-label="link to github" href="https://github.com/namachan10777"
              ><Icon class="link-icon" name="iconoir:github" /></a
            >
          </li>
        </ul>
      </nav>
    </div>
  </ContentPlacement>
</header>

<style>
  .site-header {
    padding-block: var(--space-lg);
    padding-inline: 0;
    border-block-end: var(--border-width-thin) solid rgba(var(--gray-light), var(--opacity-medium));
  }

  .container {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  nav ul {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .link-icon {
    width: var(--font-size-xl);
    height: var(--font-size-xl);
  }

  nav a {
    color: var(--link-color);
    text-decoration: none;
  }

  .logo a {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: rgb(var(--heading-color));
    text-decoration: none;
  }

  nav a:hover {
    color: var(--link-hover-color);
    text-decoration: underline;
  }

  @media (max-width: var(--breakpoint-mobile)) {
    .container {
      flex-direction: column;
      align-items: flex-start;
      gap: var(--space-md);
    }

    nav ul {
      gap: var(--space-md);
    }
  }
</style>
