---
import { Icon } from "astro-icon/components";
---

<search-on>
  <button
    class="w-full rounded-md px-2 bg-gray-800 hover:bg-gray-600 transition-colors"
  >
    <div class="flex flex-row items-center gap-2 py-2 w-full">
      <Icon name="material-symbols:search" />
      <span>search...</span>
    </div>
  </button>
</search-on>

<script>
  import { EventBus } from "@components/event-bus/event-bus";

  class SearchOn extends HTMLElement {
    constructor() {
      super();
      const button = this.querySelector("button");
      const bus = new EventBus("main-bus");
      if (button) {
        button.addEventListener("click", () => {
          bus.emit({ type: "search-on" });
        });
      }
    }
  }

  customElements.define("search-on", SearchOn);
</script>
