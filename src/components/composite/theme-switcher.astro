---
import { type Theme, ariaLabel } from "~/lib/theme";
import { Icon } from "astro-icon/components";

export interface Props {
  id: string;
  initial: Theme;
}

const { id, initial } = Astro.props;
---

<theme-switcher id={id} data-initial-theme={initial}>
  <button aria-label={ariaLabel[initial]}>
    <Icon class:list={["icon", "light-icon"]} name="iconoir:sun-light" />
    <Icon class:list={["icon", "dark-icon"]} name="iconoir:half-moon" />
  </button>
</theme-switcher>

<style>
  .icon {
    font-size: var(--font-size-2xl);
    color: var(--fg-strong);
    display: none;
  }

  theme-switcher[data-theme="light"] .light-icon {
    display: block;
  }

  theme-switcher[data-theme="dark"] .dark-icon {
    display: block;
  }
</style>

<script>
  import {
    type Theme,
    cycleTheme,
    sanitizeTheme,
    giscusTheme,
    ariaLabel,
  } from "~/lib/theme";

  function restoreTheme(initial?: string): Theme {
    const saved = localStorage.getItem("theme");
    if (saved) {
      return sanitizeTheme(saved);
    } else {
      const theme = sanitizeTheme(initial);
      localStorage.setItem("theme", theme);
      return theme;
    }
  }

  class ThemeSwitcher extends HTMLElement {
    #button: HTMLButtonElement;
    #theme: Theme;
    #initialized = false;

    constructor() {
      super();
      this.#button = this.querySelector("button")!;
      this.#button.addEventListener("click", () => this.#toggleTheme());
      this.#theme = restoreTheme(this.dataset.initialTheme);
      window.addEventListener("message", () => {
        if (!this.#initialized) {
          this.#setTheme(this.#theme);
          this.#initialized = true;
        }
      });
      this.#setTheme(this.#theme);
    }

    #setTheme(theme: Theme) {
      this.dataset.theme = theme;

      const giscus = document.querySelector(
        'iframe[class="giscus-frame"]',
      ) as HTMLIFrameElement | null;

      this.#button.ariaLabel = ariaLabel[theme];

      if (giscus) {
        giscus.contentWindow?.postMessage(
          {
            giscus: {
              setConfig: {
                theme: giscusTheme[theme],
              },
            },
          },
          "https://giscus.app",
        );
      }

      localStorage.setItem("theme", theme);
    }

    #getTheme() {
      if (this.dataset.theme) {
        return sanitizeTheme(this.dataset.theme);
      } else {
        return restoreTheme(this.dataset.initialTheme);
      }
    }

    #toggleTheme() {
      this.#setTheme(cycleTheme(this.#getTheme()));
    }
  }

  customElements.define("theme-switcher", ThemeSwitcher);
</script>
