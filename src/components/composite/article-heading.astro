---
import MarkdownPreview from "@components/display/markdown-preview.astro";

export type Props = {
  date: Date;
  href: string;
  title: string;
  bodyMarkdown: string;
};

function dateToString(date: Date): string {
  const year = `0${date.getFullYear()}`.slice(-4);
  const month = `0${date.getMonth()}`.slice(-2);
  const day = `0${date.getDay()}`.slice(-2);
  return `${year}-${month}-${day}`;
}
---

<div class="container">
  <div class="date">{dateToString(Astro.props.date)}</div>
  <div>
    <a href={Astro.props.href}>{Astro.props.title}</a>
  </div>
  <div class="preview-area">
    <MarkdownPreview text={Astro.props.bodyMarkdown} limit={255} />
    <a href={Astro.props.href} class="read-more"> 読む </a>
  </div>
</div>

<style>
  .container {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  a {
    color: var(--color-text-strong);
    font-size: var(--font-size-xl);
    text-decoration: underline;
    text-underline-offset: 3px;
  }

  .read-more {
    font-size: var(--font-size-normal);
    display: block;
    color: #55e;
  }

  .preview-area {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .date {
    font-family: var(--mono-family);
    color: var(--color-text-weak);
    font-weight: 100;
  }
</style>
