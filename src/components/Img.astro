---
import { Image } from 'astro:assets';
import { type ImageMetadata } from 'astro';

interface Props {
  alt?: string;
  src: ImageMetadata;
  width?: number | string;
}
---

<Image src={Astro.props.src} alt={Astro.props.alt || null} />

<style>
  img {
    max-width: 100%;
    height: auto;
    margin-block: 0 var(--space-md);
    margin-inline: 0;
  }
</style>
