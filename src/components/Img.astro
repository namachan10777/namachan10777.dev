---
interface Props {
  alt?: string;
  src: string;
  width?: number | string;
}
---

<img alt={Astro.props.alt} src={Astro.props.src} width={Astro.props.width} />

<style>
  img {
    max-width: 100%;
    height: auto;
    margin-block-start: 0;
    margin-block-end: var(--space-md);
    margin-inline: 0;
  }
</style>
