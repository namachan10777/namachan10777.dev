---
import { Icon } from "astro-icon/components";
const menuItems = [
  {
    name: "Blog",
    icon: "material-symbols:post",
    href: "/blog",
  },
  {
    name: "GitHub",
    icon: "mdi:github",
    href: "https://github.com/namachan10777",
  },
  {
    name: "Twitter",
    icon: "mdi:twitter",
    href: "https://twitter.com/namachan10777",
  },
];
---

<nav
  id="site-nav"
  class="font-mono fixed top-12 right-0 max-w-full w-80 h-[calc(100vh_-_3rem)] bg-white border-l border-gray-900 translate-x-full transition-transform p-4 z-50"
>
  <h2 class="text-xl text-gray-500 my-4">Links</h2>
  <ul>
    {
      menuItems.map((item) => (
        <li>
          <a
            href={item.href}
            class="flex flex-row items-center text-black text-xl py-4 border-t border-gray-900 gap-2 underline decoration-1"
          >
            <Icon name={item.icon} />
            <span>{item.name}</span>
          </a>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  /* eslint astro/no-unused-css-selector: 0 */
  #site-nav[data-show="true"] {
    @apply translate-x-0;
  }
</style>
