---
import { Icon } from "astro-icon/components";

const menuItems = [
  {
    name: "GitHub",
    icon: "mdi:github",
    href: "https://github.com/namachan10777",
    children: [
      {
        name: "activity-vocabulary",
        href: "https://github.com/namachan10777/activity-vocabulary",
      },
      {
        name: "ekika",
        href: "https://github.com/namachan10777/ekika",
      },
    ],
  },
  {
    name: "Twitter",
    icon: "mdi:twitter",
    href: "https://twitter.com/namachan10777",
  },
  {
    name: "Blog",
    icon: "material-symbols:post",
    href: "/blog",
    children: [
      {
        name: "Category",
        href: "/category",
      },
    ],
  },
];
---

<div class="h-full bg-black text-white p-4">
  <h1 class="text-2xl font-bold"><a href="/">namachan10777.dev</a></h1>
  <nav class="py-4">
    <ul class="flex flex-col">
      {
        menuItems.map((item) => (
          <li class="py-4 border-t border-gray-500">
            <a
              href={item.href}
              class="flex flex-row items-center text-xl gap-2 underline"
            >
              <Icon name={item.icon} class="w-8" />
              <spam>{item.name}</spam>
            </a>
            {item.children ? (
              <ul class="py-2 flex flex-col gap-2">
                {item.children?.map((child) => (
                  <li class="text-gray-300 underline">
                    <a href={child.href} class="ml-10">
                      {child.name}
                    </a>
                  </li>
                ))}
              </ul>
            ) : null}
          </li>
        ))
      }
    </ul>
  </nav>
</div>
