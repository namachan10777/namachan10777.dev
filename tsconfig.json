{
  "extends": "astro/tsconfigs/strictest",
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "eslint.config.js",
    "astro.config.mjs"
  ],
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@content": ["src/content/config.ts"],
      "@assets/*": ["src/assets/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "Bundler"
  }
}
