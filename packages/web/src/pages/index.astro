</Base>

<style>
  @layer component {
    .nav-list {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .readmore {
      margin-block-start: 0.5rem;
    }

    .links {
      display: flex;
      flex-flow: row wrap;
      gap: 2rem;
      font-weight: bold;
    }

    .link-icon {
      margin-inline-end: 0.5rem;
      display: inline-block;
      font-size: var(--font-size-2xl);
    }

    .readmore-icon {
      margin-inline-end: 0.5rem;
      display: inline-block;
    }

    .readmore .readmore-icon {
      transition: transform 0.2s;
    }

    .readmore:hover .readmore-icon {
      transform: scale(1.1);
    }
  }
</style>
