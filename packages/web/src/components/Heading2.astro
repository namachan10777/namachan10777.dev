---
import HeadingInner from "./HeadingInner.astro";
interface Props {
  id?: string;
}
---

<h2 id={Astro.props.id}>
  <HeadingInner id={Astro.props.id}><slot /></HeadingInner>
</h2>

<style>
  @layer component {
    h2 {
      margin-block: 0.5rem;
      font-size: var(--font-size-2xl);
      line-height: 2rem;
      font-weight: bold;
      color: var(--fg-strong);
    }

    h2::before {
      content: "#";
      font-size: var(--font-size-xl);
      color: var(--fg-weak);
      font-weight: bold;
    }
  }
</style>
