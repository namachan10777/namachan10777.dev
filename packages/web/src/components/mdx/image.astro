---
import { Picture } from "astro:assets";

export interface Props {
  alt: string;
  src: ImageMetadata;
}
---

<div class="container">
  <Picture
    alt={Astro.props.alt}
    src={Astro.props.src}
    formats={["webp"]}
    class="picture"
  />
</div>

<style>
  @layer component {
    .container {
      width: 100%;
      height: 100%;
    }

    .picture {
      height: auto;
      width: 100%;
    }
  }
</style>
