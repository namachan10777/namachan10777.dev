---
import Anchor from "~/components/anchor.astro";

export interface Props {
  tags: string[];
}
---

<nav>
  <ul class="list">
    {
      Astro.props.tags.map((tag) => (
        <li>
          <Anchor href={`/post/tag/${tag}`}>#{tag}</Anchor>
        </li>
      ))
    }
  </ul>
</nav>

<style>
  @layer component {
    .list {
      display: flex;
      flex-wrap: wrap;
      gap: 1rem;
      list-style-type: none;
      margin: 0;
    }

    .list li {
      padding: 0;
      font-family: var(--font-mono);
      font-weight: bold;
    }
  }
</style>
