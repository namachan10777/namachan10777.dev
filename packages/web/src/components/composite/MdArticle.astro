---
import "./rehype-pretty-code.css";
---

<article>
  <slot />
</article>

<script>
  document.querySelectorAll("button.shiki-copy-button").forEach((element) => {
    const button = element as HTMLButtonElement;
    button.addEventListener("click", () => {
      const text = button.parentNode?.querySelector("code")?.textContent;
      if (text) {
        navigator.clipboard.writeText(text);
        button.dataset.copied = "true";
        setTimeout(() => {
          button.dataset.copied = "false";
        }, 1500);
      }
    });
  });
</script>

<style>
  @layer markdown {
    article {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    article :global(a) {
      color: var(--fg-link);
    }

    article :global(code) {
      font-family: var(--font-mono);
      margin-inline: 0.1em;
      background-color: var(--bg-code);
      padding: 0.1em;
      border-radius: 0.1em;
    }

    article :global(:where(h1, h2, h3, h4, h5, h6)) {
      font-weight: bold;
      color: var(--fg-strong);
    }

    article :global(h2) {
      font-size: var(--font-size-2xl);
    }

    article :global(h3) {
      font-size: var(--font-size-xl);
    }

    article :global(h4) {
      font-size: var(--font-size-lg);
    }

    article :global(h5) {
      font-size: var(--font-size-lg);
    }

    article :global(h6) {
      font-size: var(--font-size-lg);
    }

    article :global(section) {
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    article :global(ol) {
      list-style-type: decimal;
      margin-inline-start: 1em;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    article :global(ol > li)::marker {
      color: var(--fg-weak);
    }

    article :global(ul) {
      list-style-type: disc;
      margin-inline-start: 1em;
      display: flex;
      flex-direction: column;
      gap: 0.5rem;
    }

    article :global(ul > li)::marker {
      color: var(--fg-weak);
    }
  }
</style>
